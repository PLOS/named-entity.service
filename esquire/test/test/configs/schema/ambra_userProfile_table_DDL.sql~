CREATE TABLE userProfile
(
   userProfileID           BIGINT                                 NOT NULL,
   userProfileURI          VARCHAR(100)                           NOT NULL,
   authId                  VARCHAR(255)                           NOT NULL,
   realName                VARCHAR(500),
   givenNames              VARCHAR(255),
   surName                 VARCHAR(65),
   title                   VARCHAR(255),
   gender                  VARCHAR(15),
   email                   VARCHAR(255) COLLATE utf8_general_ci,
   homePage                VARCHAR(512),
   weblog                  VARCHAR(512),
   publications            VARCHAR(255),
   displayName             VARCHAR(255) COLLATE utf8_general_ci,
   suffix                  VARCHAR(255),
   positionType            VARCHAR(255),
   organizationName        VARCHAR(512),
   organizationType        VARCHAR(255),
   organizationVisibility  BIT                                    DEFAULT 0 NOT NULL,
   postalAddress           TEXT,
   city                    VARCHAR(255),
   country                 VARCHAR(255),
   biography               TEXT,
   interests               TEXT,
   researchAreas           TEXT,
   alertsJournals          TEXT,
   created                 DATETIME                               NOT NULL,
   lastModified            DATETIME                               NOT NULL,
   password                VARCHAR(255)                           NOT NULL,
   passwordReset           BIT                                    DEFAULT b'0' NOT NULL,
   verificationToken       VARCHAR(255),
   verified                BIT                                    DEFAULT b'1' NOT NULL,
   active                  BIT                                    DEFAULT b'1' NOT NULL
)
ENGINE=InnoDB
COLLATE=utf8_general_ci;

ALTER TABLE userProfile
   ADD CONSTRAINT pk_userprofile
   PRIMARY KEY (userProfileID);

CREATE UNIQUE INDEX email
   ON userProfile (email ASC);

CREATE UNIQUE INDEX authId
   ON userProfile (authId ASC);

CREATE UNIQUE INDEX userProfileURI
   ON userProfile (userProfileURI ASC);

CREATE UNIQUE INDEX displayName
   ON userProfile (displayName ASC);

